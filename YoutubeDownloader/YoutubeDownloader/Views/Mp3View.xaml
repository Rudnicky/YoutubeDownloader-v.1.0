<UserControl
    x:Class="YoutubeDownloader.Mp3View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YoutubeDownloader"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Background="{StaticResource GrafitColor}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Margin="0,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBox
                Grid.Row="0"
                Grid.Column="0"
                local:FocusExtension.IsFocused="{Binding IsFocused, Mode=TwoWay}"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding YoutubeLinkUrl}" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding GoButtonCommand}"
                Content="Go!"
                Style="{StaticResource GoButtonStyle}" />
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <ListView ItemsSource="{Binding Mp3List}" Style="{StaticResource Mp3ListViewStyle}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Transparent"
                                            BorderThickness="0">
                                            <GridViewRowPresenter
                                                Width="Auto"
                                                Margin="0"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                Content="{TemplateBinding Content}" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="250" Header="Track Name">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="{StaticResource SnowColor}" Text="{Binding Name}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="300" Header="Progress">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid Width="280">
                                            <ProgressBar
                                                Foreground="{StaticResource CyanColor}"
                                                IsIndeterminate="{Binding IsIndeterminate}"
                                                Style="{StaticResource ProgressBarStyle}"
                                                Visibility="{Binding IsProgressDownloadVisible}"
                                                Value="{Binding CurrentProgress, Mode=OneWay}" />
                                            <TextBlock
                                                Style="{StaticResource Mp3ListTextBlockStyle}"
                                                Text="{Binding CurrentProgress, StringFormat={}{0:0}%}"
                                                Visibility="{Binding IsPercentLabelVisible}" />
                                            <TextBlock
                                                Style="{StaticResource Mp3ListTextBlockStyle}"
                                                Text="{Binding ConvertingLabelText}"
                                                Visibility="{Binding IsConvertingLabelVisible}" />
                                            <TextBlock
                                                Style="{StaticResource Mp3ListTextBlockStyle}"
                                                Text="{Binding IsOperationDone}"
                                                Visibility="{Binding IsOperationDoneLabelVisible}" />
                                        </Grid>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
