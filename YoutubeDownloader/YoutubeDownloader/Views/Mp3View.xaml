<UserControl
    x:Class="YoutubeDownloader.Mp3View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YoutubeDownloader"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Background="DeepSkyBlue"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <TextBox
                Grid.Row="0"
                Grid.Column="0"
                Height="30"
                Margin="20,5,5,5"
                Padding="5"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                local:FocusExtension.IsFocused="{Binding IsFocused, Mode=TwoWay}"
                Text="{Binding YoutubeLinkUrl}" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Height="30"
                Margin="5"
                Command="{Binding GoButtonCommand}"
                Content="Go!"
                IsEnabled="{Binding IsGoButtonEnabled}" />
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Width="300" Height="80">
                <ProgressBar
                    Height="40"
                    Margin="10"
                    Maximum="100"
                    Minimum="0"
                    Visibility="{Binding IsProgressDownloadVisible}"
                    Value="{Binding CurrentProgress, Mode=TwoWay}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="{Binding CurrentProgress, StringFormat={}{0:0}%}"
                    Visibility="{Binding IsPercentLabelVisible}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="{Binding ConvertingLabelText}"
                    Visibility="{Binding IsConvertingLabelVisible}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
